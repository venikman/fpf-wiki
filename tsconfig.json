{
  "extends": "astro/tsconfigs/strict",
  "include": ["src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
